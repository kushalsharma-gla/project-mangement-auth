<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">User Profile</h3>
      </div>
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <div class="display-1 mb-3">
            <i class="fas fa-user-circle text-primary"></i>
          </div>
          <h2 class="card-title"><%= user.fullName %></h2>
          <p class="text-muted"><%= user.profession %></p>
        </div>
        
        <div class="list-group">
          <div class="list-group-item">
            <div class="row">
              <div class="col-4 fw-bold">Username:</div>
              <div class="col-8"><%= user.username %></div>
            </div>
          </div>
          <div class="list-group-item">
            <div class="row">
              <div class="col-4 fw-bold">Full Name:</div>
              <div class="col-8"><%= user.fullName %></div>
            </div>
          </div>
          <div class="list-group-item">
            <div class="row">
              <div class="col-4 fw-bold">Profession:</div>
              <div class="col-8"><%= user.profession %></div>
            </div>
          </div>
          <div class="list-group-item">
            <div class="row">
              <div class="col-4 fw-bold">Joined On:</div>
              <div class="col-8"><%= new Date(user.joinedOn).toLocaleDateString() %></div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light d-flex justify-content-between">
        <a href="/projects" class="btn btn-primary">My Projects</a>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
      </div>
    </div>
  </div>
</div>